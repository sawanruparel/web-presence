{
  "name": "web-presence-api",
  "version": "1.0.0",
  "description": "Backend API for Web Presence using Hono and Cloudflare Workers",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "npm run check:migrations:remote && npm run build:deps && wrangler deploy --config wrangler.toml",
    "deploy:prod": "npm run check:migrations:remote && npm run build:deps && wrangler deploy --config wrangler.toml --env production",
    "build:deps": "npm run build --workspace=mdtohtml",
    "build": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "sync:env": "node scripts/sync-env-to-workers.js",
    "migrate:access-control": "node scripts/migrate-access-control-to-db.js",
    "migrate": "node scripts/run-migrations.js --local",
    "migrate:local": "node scripts/run-migrations.js --local",
    "migrate:remote": "node scripts/run-migrations.js --remote",
    "migrate:verify": "node scripts/verify-migrations.js --local",
    "migrate:verify:local": "node scripts/verify-migrations.js --local",
    "migrate:verify:remote": "node scripts/verify-migrations.js --remote",
    "check:migrations": "node scripts/check-migrations-at-build.js --local",
    "check:migrations:local": "node scripts/check-migrations-at-build.js --local",
    "check:migrations:remote": "node scripts/check-migrations-at-build.js --remote",
    "check:migrations:warn": "node scripts/check-migrations-at-build.js --remote --warn-only",
    "diagnose:db": "node scripts/diagnose-database.js --local",
    "diagnose:db:local": "node scripts/diagnose-database.js --local",
    "diagnose:db:remote": "node scripts/diagnose-database.js --remote"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "mdtohtml": "file:../mdtohtml",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@types/node": "^20.0.0",
    "dotenv": "^17.2.3",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0",
    "wrangler": "^4.43.0"
  }
}
