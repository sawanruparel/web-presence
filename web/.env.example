# Frontend Environment Variables - EXAMPLE
# Copy this file to .env.local for local development or .env.production for production

# API Configuration
# Base URL for the password protection backend API
VITE_API_BASE_URL=http://localhost:8787

# Development mode flag
# Set to 'true' for development mode, 'false' for production
VITE_DEV_MODE=true

# Environment indicator
# Set to 'development' for local dev, 'production' for production builds
VITE_NODE_ENV=development

# Debug logging flag
# Set to 'true' to enable debug logging, 'false' to disable
VITE_DEBUG=true

# Build API Configuration
# API key for build-time content generation (required for build process)
# NOTE: Do NOT use VITE_ prefix - this is sensitive and should NOT be exposed to client bundle
# Build scripts have access to ALL env vars via process.env, not just VITE_ prefixed ones
BUILD_API_KEY=your-build-api-key-here

# Build API URL (optional - defaults to VITE_API_BASE_URL if not set)
# Use this if your build-time API URL differs from the runtime API URL
# For example: build against staging API while runtime uses production API
BUILD_API_URL=http://localhost:8787

# Example production values:
# VITE_API_BASE_URL=https://web-presence-api.quoppo.workers.dev
# VITE_DEV_MODE=false
# VITE_NODE_ENV=production
# VITE_DEBUG=false
# BUILD_API_KEY=your-production-build-api-key
# BUILD_API_URL=https://web-presence-api.quoppo.workers.dev
