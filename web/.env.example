# API Configuration
# Base URL for the password protection backend API
VITE_API_BASE_URL=http://localhost:3001

# Development flag
# Set to 'true' for development mode, 'false' for production
VITE_DEV_MODE=true

# Mock API mode (optional - defaults to true in dev if no API_BASE_URL)
# Set to 'true' to use mock API for development, 'false' to use real API
VITE_USE_MOCK_API=true

# Example production values:
# VITE_API_BASE_URL=https://your-backend-api.vercel.app
# VITE_DEV_MODE=false
# VITE_USE_MOCK_API=false
