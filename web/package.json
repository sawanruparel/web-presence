{
  "name": "web-presence",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run build:content && vite",
    "build": "npm run clean && npm run build:content:sync && tsc && vite build",
    "build:content": "tsx scripts/fetch-content-from-r2.ts",
    "build:content:sync": "tsx scripts/fetch-content-from-r2.ts --sync",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "sync:env": "node scripts/sync-env-to-pages.js",
    "clean": "rm -rf dist rivve/html-output",
    "check:migrations:remote": "cd ../api && node scripts/check-migrations-at-build.js --remote --warn-only"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.6",
    "@heroicons/react": "^2.2.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/marked": "^5.0.2",
    "@types/node": "^24.7.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.3",
    "gray-matter": "^4.0.3",
    "marked": "^16.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.7.0",
    "typescript": "~5.8.3",
    "vite": "^7.1.6",
    "wrangler": "^4.43.0"
  }
}